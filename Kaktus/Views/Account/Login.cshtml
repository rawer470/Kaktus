@model LoginModel;
<h4>Login</h4>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" method="post">
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input type="email" class="form-control" placeholder="Enter email" asp-for="EmailAddress"
            class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" name="Password" placeholder="Password" class="form-control" />
    </div>

    <button style="margin-top: 10px; margin-right: 10px;" type="submit" class="btn btn-primary">Log In</button>
    <a style="margin-top: 10px;" asp-action="Registration" class="btn btn-secondary">Registration</a>
</form>

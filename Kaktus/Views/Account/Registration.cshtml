@model RegistrationModel

<h4>Create User</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Registration" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RepeatPassword"></label>
        <input type="password" asp-for="RepeatPassword" class="form-control" />
    </div>

    <button style="margin-top: 10px; margin-right: 10px;" type="submit" class="btn btn-primary">Registration</button>
    <a style="margin-top: 10px;" asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>